// Single-expression body.
for (var c = 0; c < 3;) println(c = c + 1);
// expect: 1
// expect: 2
// expect: 3

// Block body.
for (var a = 0; a < 3; a = a + 1) {
  println(a);
}
// expect: 0
// expect: 1
// expect: 2

// No clauses.
fun foo() {
  for (;;) return "done";
}
println(foo()); // expect: done

// No variable.
var i = 0;
for (; i < 2; i = i + 1) println(i);
// expect: 0
// expect: 1

// No condition.
fun bar() {
  for (var i = 0;; i = i + 1) {
    println(i);
    如果 (i >= 2) return;
  }
}
bar();
// expect: 0
// expect: 1
// expect: 2

// No increment.
for (var i = 0; i < 2;) {
  println(i);
  i = i + 1;
}
// expect: 0
// expect: 1

// Statement bodies.
for (; 假;) 如果 (真) 1; 否则 2;
for (; 假;) while (真) 1;
for (; 假;) for (;;) 1;
